<div class="modal fade" id="reverse_count_modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Mental Arithmetic</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button v-on:click="generateRandom" class="btn btn-warning" id="randgen-btn">Click to generate random number (1 ~ 17)</button>
        <br />
        <div class="randgen-info" v-if="randomNumber">
          <h5 class="rand-header">The random number is {{ randomNumber }}</h5>

          <ul class="nav nav-tabs justify-content-center" data-toggle="tab" id="reverse-count-actions">

            <li class="nav-item" role="tab" id="count-dist-header">
              <%= link_to "Show Count Distribution", '#reverse-count-content', class: 'nav-link',
              data: { toggle: 'tab' }, role: 'tab' %>
            </li>

            <li class="nav-item" role="tab" id="count-user-header">
              <%= link_to "User input Option", '#user-input-content', class: 'nav-link',
              data: { toggle: 'tab' }, role: 'tab' %>
            </li>

            <li class="nav-item" role="tab" id="count-timed-header">
              <%= link_to "Timed Option", '#timed-count-content', class: 'nav-link',
              data: { toggle: 'tab' }, role: 'tab' %>
            </li>
          </ul>
          <div class="tab-content">
            <%= render 'tests/options/user_input_count' %>
            <%= render 'tests/options/show_count' %>
            <%= render 'tests/options/timed_count' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
