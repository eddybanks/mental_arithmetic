<%= simple_form_for([@test, @trial]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, collection: ['Trial 1', 'Trial 2', 'Trial 3', 'Trial 4', 'Trial 5'] %>
    <% if @page_header == "Edit Trial" %>
      <%= f.input :accuracy_rating, collection: 1..10 %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
